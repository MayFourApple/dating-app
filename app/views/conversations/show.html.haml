%nav
  .container
    %a.navbar-brand.fw-bold.fs-4 Profile
    %ul.nav.justify-content-center
      %li.nav-item
        %a=link_to 'Matches', dashboard_path, class: 'text-decoration-none mx-2'
      %li.nav-item
        %a= link_to 'Messages', conversation_path(@conversations.first)
        %span.badge.text-bg-secondary= current_user.unread
      %li.nav-item
        %a= link_to 'New Schedule', new_schedule_path, class: 'text-decoration-none mx-2'
      %li.nav-item
        %a= link_to 'Schedules', schedules_path, class: 'text-decoration-none'
.conversations
  %ul
    - @conversations.each do |conversation|
      %li{class: conversation == @conversation ? 'active' : ''}
        = link_to conversation.name(current_user), conversation_path(conversation)
.messages
  %ul
    - @conversation.messages.each do |message|
      %li
        %p= message.content
        %p= message.created_at.to_formatted_s(:long)
  %div
    = form_for [@conversation, @message] do |f|
      = f.text_field :content
      = f.submit